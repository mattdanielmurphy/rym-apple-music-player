{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RYM Apple Music Player",
  "version": "0.1.0",
  "identifier": "com.rym-apple-music.app",
  "build": {
    "beforeDevCommand": "npx vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npx tsc && npx vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RYM Apple Music Player",
        "width": 1200,
        "height": 500,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#14141a"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: ipc://localhost; connect-src 'self' ipc: ipc://localhost ipc://localhost/* https://*.apple.com https://*.rateyourmusic.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.apple.com https://*.rateyourmusic.com; style-src 'self' 'unsafe-inline' https://*.apple.com https://*.rateyourmusic.com; img-src 'self' blob: data: https://*.mzstatic.com https://*.snmc.io;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}